# Configurações para Desenvolvimento Local (API rodando FORA do Docker)
# Use este arquivo quando rodar: uvicorn app.main:app --reload

# PostgreSQL (conecta ao container Docker na porta 5433)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=lifecalling
POSTGRES_PASSWORD=lifecalling
POSTGRES_DB=lifecalling

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=86400
JWT_ISS=lifecalling

# Upload Directory (local)
UPLOAD_DIR=./uploads

# Environment
DEBUG=true
ENVIRONMENT=development
ENV=development
FRONTEND_URL=http://localhost:3000
