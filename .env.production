# Ambiente de Produção - PostgreSQL
# NUNCA usar SQLite - sempre PostgreSQL conforme CLAUDE.md
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=lifecalling_prod
POSTGRES_USER=lifecalling_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION

# JWT - ALTERE ESTAS CHAVES EM PRODUÇÃO
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_KEY_IN_PRODUCTION_MIN_32_CHARS
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=86400
JWT_ISS=lifecalling

# API Configuration - Altere para seu domínio
NEXT_PUBLIC_API_BASE_URL=https://seu-dominio.com/api
API_BASE_URL=http://api:8000

# Upload Directory
UPLOAD_DIR=/app/uploads

# Produção
DEBUG=false
ENVIRONMENT=production
NODE_ENV=production

# SSL/TLS (se usando certificados próprios)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Configurações de Performance
WORKERS=2
MAX_CONNECTIONS=100

# Configurações de Segurança
ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# Backup (opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Todo dia às 2h da manhã