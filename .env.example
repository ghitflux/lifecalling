# PostgreSQL Database
# IMPORTANTE: NUNCA usar SQLite - sempre PostgreSQL
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=lifecalling
POSTGRES_USER=lifecalling
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# JWT Configuration
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_STRONG_SECRET
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=86400
JWT_ISS=lifecalling

# API URLs
# Development
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# Production (uncomment and configure)
# NEXT_PUBLIC_API_BASE_URL=https://api.lifeservicos.com
# API_BASE_URL=https://api.lifeservicos.com

# WebSocket (optional)
# NEXT_PUBLIC_WS_PATH=/ws/events

# Upload Directory
UPLOAD_DIR=/app/uploads

# Environment
DEBUG=true
ENVIRONMENT=development

# Production settings (uncomment for production)
# DEBUG=false
# ENVIRONMENT=production
